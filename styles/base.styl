html, body, h1
    padding 0
    margin 0
a
    color $baseTextColor
    text-decoration: none
*
    box-sizing: border-box
*:focus
    outline: thin dotted grey;
html
    width 100%
    height 100%
body
    font-family "Source Sans Pro", "Helvetica", "Arial", sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-size 16px
    color $baseTextColor
    line-height: 1.45;
    width 100%
    height 100%
.layout-inner
    max-width 1024px
    padding 0 10px
    margin auto

.medium-zoom--open,.medium-zoom--opened
    .medium-zoom-overlay
        z-index 10000
    .medium-zoom-image--open,.medium-zoom-image--opened
        z-index 10001